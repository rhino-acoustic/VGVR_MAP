{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 180
      }
    }
  ],
  "routes": [
    {
      "src": "/generated-png/(.*)",
      "dest": "/api/get-image?filename=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
